<h2 class="title text-center mb-3"><i class="fas fa-user-plus text-primary"></i> Novo usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

  <div class="profile border border-muted mt-2 mb-2">
    <div class="buttons text-center p-2">
      <%= f.input :type,  as: :select, collection: [ 'Cliente', 'Cuidador' ], :prompt => 'Selecione', label:'Perfil', required: true %>
    </div>
  </div>

    <%= f.input :first_name,
                required: true,
                autofocus: true,
                label: "Nome",
                input_html: { autocomplete: "nome" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                label: "Sobrenome",
                input_html: { autocomplete: "sobrenome" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: "E-mail",
                input_html: { autocomplete: "email" }%>
        <%= f.input :address,
                required: true,
                autofocus: true,
                label: "Endereço",
                input_html: { autocomplete: "endereço" }%>
      <%= f.input :city,
                required: true,
                autofocus: true,
                label: "Cidade",
                input_html: { autocomplete: "cidade" }%>
    <%= f.input :password,
                required: true,
                label: "Senha",
                hint: ("Mínimo: #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirmação da senha",
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", class:"btn btn-primary btn-sm mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
