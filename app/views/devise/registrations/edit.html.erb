<h2 class="title text-center mb-3"><i class="fas fa-user-plus text-primary"></i> Editar usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

      <%= f.input :first_name,
              required: true,
              autofocus: true,
              label: "Nome",
              input_html: { autocomplete: "nome" }%>
  <%= f.input :last_name,
              required: true,
              autofocus: true,
              label: "Sobrenome",
              input_html: { autocomplete: "sobrenome" }%>
  <%= f.input :email,
              required: true,
              autofocus: true,
              label: "E-mail",
              input_html: { autocomplete: "email" }%>
      <%= f.input :address,
              required: true,
              autofocus: true,
              label: "Endereço",
              input_html: { autocomplete: "endereço" }%>
    <%= f.input :city,
              required: true,
              autofocus: true,
              label: "Cidade",
              input_html: { autocomplete: "cidade" }%>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Deixe em branco caso não queira mudar",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Confirme sua senha",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Editar", class: "btn btn-primary" %>
    <%= link_to "Voltar", :back, class: "btn btn-secondary ml-2"%>
  </div>
<% end %>
