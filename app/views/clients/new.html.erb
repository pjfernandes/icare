<h2 class="title text-center mb-3"><i class="fas fa-user-plus text-primary"></i> Novo usuário</h2>

<div class="buttons text-center">
  <%=link_to "Cliente", new_client_path, class: "btn btn-secondary mr-2 mt-2" %>
  <%=link_to "Cuidador", "new_caregiver_path", class: "btn btn-success mr-2 mt-2" %>
</div>

<%= simple_form_for [@client] do |f| %>
  <div class="form-inputs mt-2">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                label: "Nome",
                input_html: { autocomplete: "nome" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                label: "Sobrenome",
                input_html: { autocomplete: "sobrenome" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: "E-mail",
                input_html: { autocomplete: "email" }%>
        <%= f.input :address,
                required: true,
                autofocus: true,
                label: "Endereço",
                input_html: { autocomplete: "endereço" }%>
      <%= f.input :city,
                required: true,
                autofocus: true,
                label: "Cidade",
                input_html: { autocomplete: "cidade" }%>
    <%= f.input :password,
                required: true,
                label: "Senha",
                hint: ("Mínimo: #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirmação da senha",
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

<div class="form-actions">
  <%= f.button :submit, "Cadastrar", class:"btn btn-primary btn mb-2" %>
</div>
<% end %>
